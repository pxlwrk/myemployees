{% set title = "Bitte anmelden!" %}

{% extends 'base.html.twig' %}

{% block javascripts %}
{{ parent() }}
 <script src="/js/pages/pass-addon.init.js"></script>
{% endblock %}

{% block body %}
<div class="auth-bg-basic d-flex align-items-center min-vh-100">
            <div class="bg-overlay bg-light"></div>
            <div class="container">
                <div class="d-flex flex-column min-vh-100 py-5 px-3">

                    <div class="row justify-content-center my-auto">
                        <div class="col-md-8 col-lg-6 col-xl-5">
                            <div class="card bg-transparent shadow-none border-0">
                                <div class="card-body">
                                    <div class="py-3">
                                        <div class="text-center">
                                            <h5 class="mb-0">Sch√∂n, dass du da bist!</h5>
                                            <p class="text-muted mt-2">Bitte melde dich an.</p>
                                            {% if error %}
                                                <p class="error mt-2">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                                            {% endif %}
                                        </div>
                                        <form class="mt-4 pt-2" action="{{ path('app_login') }}" method="post">
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                            <div class="form-floating form-floating-custom mb-3">
                                                <input type="text" class="form-control" id="input-username" placeholder="Benutzername eingeben" name="_username" value="{{ last_username }}"  autocomplete="username">
                                                <label for="input-username">Benutzername</label>
                                                <div class="form-floating-icon">
                                                    <i class="uil uil-users-alt"></i>
                                                </div>
                                            </div>

                                            <div class="form-floating form-floating-custom mb-3 auth-pass-inputgroup">
                                                <input type="password" class="form-control" id="password-input" placeholder="Passwort eingeben" name="_password" autocomplete="current-password">
                                                <button type="button" class="btn btn-link position-absolute h-100 end-0 top-0" id="password-addon">
                                                    <i class="mdi mdi-eye-outline font-size-18 text-muted"></i>
                                                </button>
                                                <label for="password-input">Passwort</label>
                                                <div class="form-floating-icon">
                                                    <i class="uil uil-padlock"></i>
                                                </div>
                                            </div>
        
                                            <div class="form-check form-check-primary font-size-16 py-1">
                                                <input class="form-check-input" type="checkbox" id="remember-check" name="_remember_me">
                                                <div class="float-end">
                                                    <a href="auth-resetpassword-basic" class="text-muted text-decoration-underline font-size-14">Passwort vergessen?</a>
                                                </div>
                                                <label class="form-check-label font-size-14" for="remember-check">
                                                    Daten merken
                                                </label>
                                            </div>
        
                                            <div class="mt-3">
                                                <button class="btn btn-primary w-100" type="submit">Anmelden</button>
                                            </div>
    
                                            <div class="mt-4 pt-3 text-center">
                                                <p class="text-muted mb-0">Noch keinen Zugang? <a href="{{ path('app_register') }}" class="fw-semibold text-decoration-underline"> Jetzt registrieren </a> </p>
                                            </div>
        
                                        </form><!-- end form -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end row -->

                    <div class="row">
                        <div class="col-xl-12">
                            <div class="mt-4 mt-md-5 text-center">
                                <p class="mb-0">&copy;}} PXLWRK.</p>
                            </div>
                        </div>
                    </div> <!-- end row -->
                </div>
            </div>
            <!-- end container fluid -->
        </div>
        <!-- end authentication section -->

{% endblock %}
